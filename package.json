{
  "name": "typescript-backend-template",
  "version": "2.0.0",
  "description": "TypeScript MCP server boilerplate",
  "main": "src/index.ts",
  "engines": {
    "node": ">= 22.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.release.json --verbose && chmod +x dist/index.js",
    "start": "cross-env NODE_ENV=production NODE_NO_WARNINGS=1 node dist/index.js",
    "dev": "cross-env NODE_ENV=dev NODE_NO_WARNINGS=1 tsx watch src/index.ts",
    "test": "jest --passWithNoTests",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "inspect": "npx @modelcontextprotocol/inspector --config mcp.json"
  },
  "author": "abraxas93",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.4.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "bybit-api": "^4.5.1",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.2",
    "tslib": "^2.8.1",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  }
}